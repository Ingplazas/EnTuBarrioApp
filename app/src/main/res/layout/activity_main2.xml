<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/im_Logo2"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/entubarrio_logo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_TipodeCuenta"
        android:layout_width="245dp"
        android:layout_height="95dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="83dp"
        android:text="Elije El Tipo de Cuenta:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_TipoCliente"
        android:layout_width="141dp"
        android:layout_height="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="190dp"
        android:onClick="opCliente"
        android:text="@string/bt_TipoCliente"
        app:backgroundTint="#CA8501"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_TipodeCuenta" />

    <Button
        android:id="@+id/bt_TipoNegocio"
        android:layout_width="141dp"
        android:layout_height="40dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="80dp"
        android:onClick="opNegocio"
        android:text="@string/bt_TipoNegocio"
        app:backgroundTint="#5D5587"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_TipoCliente" />

    <ImageView
        android:id="@+id/im_Bandera"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:rotation="25"
        android:rotationY="-17"
        android:src="@drawable/flag_3574340_960_720"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>